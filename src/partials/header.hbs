<header class="page-header" id="header">
  <!-- слайдер -->
  <div class="background">
    <div class="slider-wrapper">
      <div class="slider-media">
        <ul class="follow-us">
          <li class="follow-us__item">
            <a class="follow-us__link follow-us__link--decorated" href=" https://www.instagram.com/" target="_blank"
              rel="noopener noreferrer">Instagram</a>
          </li>
          <li class="follow-us__item">
            <a class="follow-us__link" href="https://www.youtube.com/" target="_blank"
              rel="noopener noreferrer">Youtube</a>
          </li>
        </ul>
      </div>
      <div class="slider">
        <ul class="slider__list" id="slider-list"></ul>
      </div>
      <form class="slider-radio">
        <div class="slider-radio__wrapper" role="group">
          <ul class="slider-radio__list" id="slider-radio">
            <li class="slider-radio__item">
              <label class="slider-radio__label" for="first-slider-btn">
                <input type="radio" name="slider-img" value="slider-image1"
                  class="slider-radio__input visuallyhidden slider-radio__first-slide" />
                <span class="slider-radio__icon" data-slider-btn="first"></span></label>
            </li>
            <li class="slider-radio__item">
              <label class="slider-radio__label" for="second-slider-btn">
                <input type="radio" name="slider-img" value="slider-image2"
                  class="slider-radio__input visuallyhidden slider-radio__second-slide" />
                <span class="slider-radio__icon" data-slider-btn="second"></span></label>
            </li>
            <li class="slider-radio__item">
              <label class="slider-radio__label" for="third-slider-btn">
                <input type="radio" name="slider-img" value="slider-image3"
                  class="slider-radio__input visuallyhidden slider-radio__third-slide" />
                <span class="slider-radio__icon" data-slider-btn="third"></span></label>
            </li>
          </ul>
        </div>
      </form>
      <div class="slider-nav">
        <ul class="slider-nav__list" data-slider-btns>
          <li class="slider-nav__item">
            <button class="slider-nav__btn slider-nav__btn--prev" data-slider-prev disabled>Назад</button>
          </li>
          <li class="slider-nav__item">
            <button class="slider-nav__btn slider-nav__btn--next" data-slider-next>
              Вперед
            </button>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <!-- container -->
  <div class="container">
    <div class="header-nav">
      <!-- логотип -->
      <div class="logo" href="">
        <svg width="69" height="56">
          <use href="src/images/svg-sprite.svg#icon-logo"></use>
        </svg>
      </div>

      <!-- burger-menu button -->
      <button type="button" class="burger-button" aria-expanded="false" aria-controls="menu-container" data-menu-button>
        <svg width="40" height="40" aria-label="Переключатель мобильного меню">
          <use class="burger-closed" href="src/images/svg-sprite.svg#icon-burger-open"></use>
          <use class="burger-opened" href="src/images/svg-sprite.svg#icon-burger-close"></use>
        </svg>
      </button>
    </div>

    <!-- nav menu (main) -->
    <div class="nav-main">
      <!-- navigation menu -->
      <nav>
        <ul class="nav-menu">
          <li class="nav-menu__item">
            <a class="nav-menu__link" href="#about-us">О нас</a>
          </li>
          <li class="nav-menu__item">
            <a class="nav-menu__link" href="#services">Услуги и цены</a>
          </li>
          <li class="nav-menu__item">
            <a class="nav-menu__link" href="#team">Мастера</a>
          </li>
          <li class="nav-menu__item">
            <a class="nav-menu__link" href="#contacts">Контакты</a>
          </li>
        </ul>
      </nav>

      <!-- contact-us -->
      <ul class="contact-us">
        <li class="contact-us__item">
          <a class="contact-us__tel" href="tel:+38 044 111 11 11">+38 044 111 11 11</a>
        </li>
        <li class="contact-us__item">
          <a class="contact-us__online" href="#appointment">онлайн-запись</a>
        </li>
      </ul>
    </div>

    <!-- site heading -->
    <div class="heading">
      <p class="heading__description">A hair salon for men in Kyiv</p>
      <h1 class="heading__main">BarberShop</h1>
      <p class="heading__about-us">
        Мы эксперты в модных мужских стрижках. Работаем быстро, осторожно и со
        вкусом.
      </p>
    </div>

    <!-- backdrop -->
    <div class="backdrop" data-menu>
      <!-- burger menu -->
      <div class="burger-wrapper">
        <!-- navigation menu (burger) -->
        <nav>
          <ul class="nav-menu" data-backdrop-nav>
            <li class="nav-menu__item">
              <a class="nav-menu__link" href="#about-us">О нас</a>
            </li>
            <li class="nav-menu__item">
              <a class="nav-menu__link" href="#services">Услуги и цены</a>
            </li>
            <li class="nav-menu__item">
              <a class="nav-menu__link" href="#team">Мастера</a>
            </li>
            <li class="nav-menu__item">
              <a class="nav-menu__link" href="#contacts">Контакты</a>
            </li>
          </ul>
        </nav>

        <!-- contact-us (burger) -->
        <ul class="contact-us">
          <li class="contact-us__item">
            <a class="contact-us__tel" href="tel:+38 044 111 11 11">+38 044 111 11 11</a>
          </li>
          <li class="contact-us__item">
            <a class="contact-us__online" href="#appointment" data-backdrop-online>онлайн-запись</a>
          </li>
        </ul>

        <!-- follow-us (burger) -->
        <ul class="follow-us">
          <li class="follow-us__item">
            <a class="follow-us__link follow-us__link--decorated" href="https://www.instagram.com/" target="_blank"
              rel="noopener noreferrer">Instagram</a>
          </li>
          <li class="follow-us__item">
            <a class="follow-us__link" href="https://www.youtube.com/" target="_blank"
              rel="noopener noreferrer">Youtube</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>